<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".ResultsDigitalArt">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/showwinnersBTNDA"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:background="#1dbf72"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_gravity="center"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"

        android:text="Show Winners"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:id="@+id/linearresultFRDA">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:text="1. "/>

            <TextView
                android:id="@+id/FirstWinnerFRDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:text="2. "/>
            <TextView
                android:id="@+id/SecondWinnerFRDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:text="3. "/>
            <TextView
                android:id="@+id/ThirdWinnerFRDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                />
            <TextView
                android:id="@+id/CompID_FRDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:text="Winners"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>